{
  "name": "@akera/workspace",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "bun@1.1.0",
  "scripts": {
    "setup": "cp .env ./packages/supabase/.env && bunx nx docker supabase",
    "dev": "nx run-many --target=serve --all --parallel",
    "build": "nx run-many --target=build --all --parallel",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "dep:check": "syncpack list-mismatches",
    "dep:fix": "syncpack fix-mismatches && bun install",
    "dep:update": "bunx npm-check-updates -u && bun install",
    "dep:validate": "bun run scripts/validate-deps.ts",
    "ts:check": "nx run-many -t typecheck",
    "migrate": "nx migrate latest && bun install && nx migrate --run-migrations",
    "release": "nx release version && nx release publish"
  },
  "dependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "zod": "^3.23.8",
    "elysia": "^1.3.21",
    "@supabase/supabase-js": "^2.57.2",
    "@tanstack/react-router": "^1.131.10",
    "lucide-react": "^0.540.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/eden": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@radix-ui/react-toast": "^1.2.15",
    "@tanstack/react-table": "^8.21.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@eslint/js": "^9.35.0",
    "@nx/eslint-plugin": "^21.4.1",
    "@nx/js": "21.3.1",
    "@nx/react": "^21.4.1",
    "@nx/vite": "21.3.1",
    "@nx/web": "21.3.1",
    "@nx/workspace": "21.3.1",
    "@swc-node/register": "~1.9.2",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "~0.5.17",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^18.19.124",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bun-types": "^1.2.21",
    "eslint": "9.9.0",
    "jiti": "2.4.2",
    "npm-check-updates": "^17.1.0",
    "nx": "21.3.1",
    "postcss": "8.4.38",
    "prettier": "3.3.3",
    "syncpack": "^12.4.0",
    "tslib": "^2.8.1",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^5.4.20",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "typescript": "5.6.3",
    "tslib": "^2.8.1",
    "zod": "^3.23.8"
  }
}
