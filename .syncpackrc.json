{
  "source": ["package.json", "apps/*/package.json", "packages/*/package.json"],
  "versionGroups": [
    {
      "label": "Use workspace protocol for internal packages",
      "dependencies": ["@akera/**"],
      "packages": ["apps/**"],
      "pinVersion": "workspace:*"
    }
  ],
  "semverGroups": [
    {
      "label": "Ensure React versions are compatible",
      "dependencies": ["react", "react-dom"],
      "packages": ["**"],
      "range": ""
    }
  ],
  "sortAz": [
    "contributors",
    "dependencies",
    "devDependencies",
    "keywords",
    "peerDependencies",
    "scripts"
  ],
  "sortFirst": [
    "name",
    "version",
    "private",
    "description",
    "keywords",
    "type",
    "main",
    "module",
    "types",
    "exports",
    "sideEffects",
    "scripts",
    "dependencies",
    "peerDependencies",
    "devDependencies"
  ]
}
