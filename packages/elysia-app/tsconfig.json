{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.ts",
    "src/shared/i18n/generated-types.ts",
    "src/**/*.json",
    "assets/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
