{
"extends": "../../tsconfig.base.json",
"compilerOptions": {
  "composite": true,
  "declaration": true,
  "outDir": "dist",
  "rootDir": "src",
  "lib": ["ESNext", "DOM"], 
  "types": ["bun-types"],
  "module": "ESNext",
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": true,
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "react-jsx",
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
    "paths": {
      "@akera/features/src": ["src"]

    }
},
"references": [
    { 
        "path": "../elysia-app" 
    },
    {
        "path": "../ui"
    },
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
  ],
  "include": [
    "/**/*.ts",
    "/**/*.tsx",
    "/**/*.js",
    "/**/*.jsx",
    "/**/*.json",
    "/**/*.css",
    "/**/*.scss"
  ],
}
