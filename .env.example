# Environment Configuration Example
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# Postgres Database
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=akera_db
POSTGRES_USER=postgres
POOLER_TENANT_ID=your_tenant_id

# Server Configuration
PORT=3000
LOCAL=false

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret

# Supabase Additional (from supabase package)
JWT_SECRET=your_jwt_secret
ANON_KEY=your_supabase_anon_key
SERVICE_ROLE_KEY=your_service_role_key
DASHBOARD_USERNAME=your_dashboard_username
DASHBOARD_PASSWORD=your_dashboard_password
SECRET_KEY_BASE=your_secret_key_base
VAULT_ENC_KEY=your_vault_encryption_key

# Supavisor Database Pooler
POOLER_PROXY_PORT_TRANSACTION=6543
POOLER_DEFAULT_POOL_SIZE=20
POOLER_MAX_CLIENT_CONN=100
POOLER_DB_POOL_SIZE=5

# API Proxy (Kong)
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

# API (PostgREST)
PGRST_DB_SCHEMAS=public,storage,graphql_public

# Auth (GoTrue)
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=http://localhost:3000/auth/callback
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
API_EXTERNAL_URL=http://localhost:8000

# Mailer Config
MAILER_URLPATHS_CONFIRMATION=/auth/v1/verify
MAILER_URLPATHS_INVITE=/auth/v1/verify
MAILER_URLPATHS_RECOVERY=/auth/v1/verify
MAILER_URLPATHS_EMAIL_CHANGE=/auth/v1/verify

# Email Auth
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=supabase-mail
SMTP_PORT=2500
SMTP_USER=fake_mail_user
SMTP_PASS=fake_mail_password
SMTP_SENDER_NAME=fake_sender
ENABLE_ANONYMOUS_USERS=false

# Phone Auth
ENABLE_PHONE_SIGNUP=true
ENABLE_PHONE_AUTOCONFIRM=true

# Studio Dashboard
STUDIO_DEFAULT_ORGANIZATION="Default Organization"
STUDIO_DEFAULT_PROJECT="Default Project"
STUDIO_PORT=3000
SUPABASE_PUBLIC_URL=http://localhost:8000
IMGPROXY_ENABLE_WEBP_DETECTION=true
OPENAI_API_KEY=

# Functions
FUNCTIONS_VERIFY_JWT=false

# Logs/Analytics
LOGFLARE_PUBLIC_ACCESS_TOKEN=your-super-secret-and-long-logflare-key-public
LOGFLARE_PRIVATE_ACCESS_TOKEN=your-super-secret-and-long-logflare-key-private
DOCKER_SOCKET_LOCATION=/var/run/docker.sock
GOOGLE_PROJECT_ID=GOOGLE_PROJECT_ID
GOOGLE_PROJECT_NUMBER=GOOGLE_PROJECT_NUMBER
GOTRUE_EXTERNAL_GOOGLE_ENABLED=false

# Resend Email Service
RESEND_DOMAIN=your-domain.com
RESEND_API_KEY=your_resend_api_key

# Notifications
NOTIFS_DEBUG=false

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# PostHog Analytics
POSTHOG_API_KEY=your_posthog_api_key

# S3 Storage
S3_BUCKET_NAME=your-bucket-name
S3_ENDPOINT=https://your-s3-endpoint.com
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Client-safe variables (for frontend apps)
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Vite Environment Variables (for frontend apps)
VITE_ANON_KEY=your_vite_anon_key
VITE_API_EXTERNAL_URL=http://localhost:8000
VITE_AUTH_APP=http://localhost:5174
VITE_USER_APP=http://localhost:5175
